<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id="@+id/Result" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetFacults"
        android:id="@+id/FacultsButton"
        android:layout_marginBottom="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OnGetFacultsClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetGroups"
        android:id="@+id/GroupsButton"
        android:layout_alignBottom="@+id/FacultsButton"
        android:layout_toRightOf="@+id/FacultsButton"
        android:layout_toEndOf="@+id/FacultsButton"
        android:onClick="OnGetGroupsClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetSemestr"
        android:id="@+id/SemestrButton"
        android:layout_alignBottom="@+id/GroupsButton"
        android:layout_toRightOf="@+id/GroupsButton"
        android:layout_toEndOf="@+id/GroupsButton"
        android:onClick="OnGetSemestrClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetStudent"
        android:id="@+id/button4"
        android:layout_below="@+id/GroupsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OnGetStudentClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetGroupRating"
        android:id="@+id/GetGRatingButton"
        android:layout_alignBottom="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="OnGetGroupRatingClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetStudentRating"
        android:id="@+id/GetSRatingButton"
        android:layout_alignTop="@+id/GetGRatingButton"
        android:layout_toRightOf="@+id/GetGRatingButton"
        android:layout_toEndOf="@+id/GetGRatingButton"
        android:onClick="OnGetSRatingClick"/>

</RelativeLayout>
